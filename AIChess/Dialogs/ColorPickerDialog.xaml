<Window x:Class="AIChess.Dialogs.ColorPickerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Color" Height="300" Width="400" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- A -->
        <Grid Grid.Row="0" Margin="0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="A" VerticalAlignment="Center"/>
            <Slider Grid.Column="1" Name="ASlider" Minimum="0" Maximum="255" TickFrequency="1" IsSnapToTickEnabled="True" ValueChanged="Slider_ValueChanged"/>
            <TextBlock Grid.Column="2" Name="AText" Width="50" TextAlignment="Right" VerticalAlignment="Center"/>
        </Grid>

        <!-- R -->
        <Grid Grid.Row="1" Margin="0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="R" VerticalAlignment="Center"/>
            <Slider Grid.Column="1" Name="RSlider" Minimum="0" Maximum="255" TickFrequency="1" IsSnapToTickEnabled="True" ValueChanged="Slider_ValueChanged"/>
            <TextBlock Grid.Column="2" Name="RText" Width="50" TextAlignment="Right" VerticalAlignment="Center"/>
        </Grid>

        <!-- G -->
        <Grid Grid.Row="2" Margin="0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="G" VerticalAlignment="Center"/>
            <Slider Grid.Column="1" Name="GSlider" Minimum="0" Maximum="255" TickFrequency="1" IsSnapToTickEnabled="True" ValueChanged="Slider_ValueChanged"/>
            <TextBlock Grid.Column="2" Name="GText" Width="50" TextAlignment="Right" VerticalAlignment="Center"/>
        </Grid>

        <!-- B -->
        <Grid Grid.Row="3" Margin="0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="B" VerticalAlignment="Center"/>
            <Slider Grid.Column="1" Name="BSlider" Minimum="0" Maximum="255" TickFrequency="1" IsSnapToTickEnabled="True" ValueChanged="Slider_ValueChanged"/>
            <TextBlock Grid.Column="2" Name="BText" Width="50" TextAlignment="Right" VerticalAlignment="Center"/>
        </Grid>

        <!-- Preview -->
        <Border Grid.Row="4" Margin="0,10,0,10" BorderBrush="Black" BorderThickness="1" Height="60">
            <Grid>
                <Rectangle Name="PreviewRectangle" Fill="Transparent"/>
                <TextBlock Name="HexText" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="5" Foreground="Black" Background="#80FFFFFF"/>
            </Grid>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="80" Margin="0,0,10,0" Click="Ok_Click" IsDefault="True"/>
            <Button Content="Cancel" Width="80" Click="Cancel_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
